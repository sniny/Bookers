<h1>Editing Book</h1><br>

<%= form_for(@book) do |f| %>
<%= render 'layouts/error_messages', model: f.object %>
  <h4>Title</h4>
  <%= f.text_field :title %><br>

  <h4>Body</h4>
  <%= f.text_area :body %><br>

  <%= f.submit 'Update Book' %>
<% end %>
<%= link_to"Show", book_path(@book) %>
<%= link_to"Back", books_path %>
