<h1>Books</h1><br>
    	<table>
    		<thead>
    			<tr>
    				<th>Title</th>
    				<th>Body</th>
    				<th colspan="3"></th>
    			</tr>
    		</thead>
    		<tbody>
    			<% @lists.each do |list| %>
    			<tr>
  					<td><%= list.title %></td>
  					<td><%= list.body %></td>
 	 				<td><%= link_to'Show' ,book_path(list.id) %></td>
  					<td><%= link_to'Edit' ,edit_book_path(list.id) %></td>
  					<td><%= link_to'Destroy' ,book_path(list.id), method: :delete , "data-confirm" => "Are you sure?"%></td>
				</tr>
				<% end %>
    		</tbody>
    	</table><br>


<h1>New book</h1><br>

<%= form_for(@book) do |f| %>
<%= render 'layouts/error_messages', model: f.object %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %><br>

  <%= f.submit 'Create Book' %>


<% end %>





